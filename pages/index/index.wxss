}
.container #main .search {
  width: 100%;
  padding: 0;
  left: 0;
  height: 80rpx;
  font-size: 28rpx;
  position: fixed;
  background: #ffa5bc;
}
.container #main .search>view {
  width: 600rpx;
  position: absolute;
  margin: 0 auto;
  left: 75rpx;
  border-bottom: 2rpx solid #fff;
}
.container #main .search input {
  width: 560rpx;
  height: 80rpx;
  display: inline-block;
  float: right;
  color: #fff;
}
.container #main .search .search-icon {
  position: absolute;
  left: 0;
  top: 28rpx;
}
#bg-index {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.container #main .curday-weather {
  width: 600rpx;
  margin: 0 auto;
  color: #fff;
  margin-top: 90rpx;
}
.container #main .curday-weather .city-name {
  font-size: 66rpx;
}
.container #main .curday-weather .update-time {
  color: #fff;
  font-size: 26rpx;
  float: right;
  margin-top: 10rpx;
}
.container #main .curday-weather .prompt {
  font-size: 26rpx;
  margin: 30rpx 0;
}
.container #main .curday-weather .temperature {
  font-size: 180rpx;
  margin: 60rpx;
  text-align: center;
}
.container #main .curday-weather .weatherDesc {
  font-size: 30rpx;
  text-align: center;
}
.container #main .curday-weather .weatherPm {
  width: 100rpx;
  height: 40rpx;
  line-height: 30rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, .3);
  margin: 20rpx auto;
  text-align: center;
}
.container #main .curday-weather .weatherPm text {
  font-size: 26rpx;
}
.container #main .weather-recent {
  display: flex;
  margin: 40rpx 0;
  padding: 20rpx 0;
  background-color: rgba(0,0,0,.3);
}
.container #main .weather-recent .recent-day {
  flex: 1;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}
.container #main .weather-recent .recent-day view {
  line-height: 50rpx;
}

.container #main .suggesst-info {
  padding: 0 40rpx;
  background-color: rgba(0,0,0,.3);
  color: #fff;
}
.container #main .suggesst-info .suggesst-every {
  display: flex;
  border-bottom: 1rpx solid rgba(255, 255, 255, .3);
  padding: 10rpx 0;
}
.container #main .suggesst-info .suggesst-every image {
  width: 80rpx;
  height: 80rpx;
  padding: 0 20rpx;
  line-height: 140rpx;
  margin-top: 20rpx;
}
.container #main .suggesst-info .suggesst-every .suggesst-txt {
  flex: 1;
  height: 140rpx;
}
.container #main .suggesst-info .suggesst-every .suggesst-txt .sugg-two {
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  display: inline-block;
  height: 10rpx
}